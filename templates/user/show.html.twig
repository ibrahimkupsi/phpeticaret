{% extends 'blankbase.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            {{ include('user/usermenu.html.twig') }}

            <div class="blog-post-area">
                <h2 class="title text-center">User Profile</h2>
                <div class="single-blog-post">

                    <div class="blog-post-area">
                        <div class="row">
                            <div class="col-sm-6">


                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        {% if app.user %}
                                            <td>{{ app.user.id }}</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        {% if app.user %}
                                            <td>{{ app.user.username }}</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Roles</th>
                                        {% if app.user %}
                                            <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Password</th>
                                        {% if app.user %}
                                            <td>{{ app.user.password }}</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        {% if app.user %}
                                            <td>{{ app.user.name }}</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Surname</th>
                                        {% if app.user %}
                                            <td>{{ app.user.surname }}</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Image</th>
                                        {% if app.user %}
                                            <td>{{ app.user.image }}</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        {% if app.user %}
                                            <td>{{ app.user.status }}</td>
                                        {% endif %}
                                    </tr>
                                    </tbody>
                                </table>
                                {% if app.user %}
                                    <a href="{{ path('user_edit', {'id': app.user.id}) }}" class="btn btn-block btn-primary">Edit Profile</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    </div>
{% endblock %}
