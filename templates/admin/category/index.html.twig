{% extends 'adminbase.html.twig' %}

{% block title %}Category Home page{% endblock %}

{% block body %}
<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h1>Category Listeleme
                </h1>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Parentid</th>
                        <th>Title</th>
                        <th>Keywords</th>
                        <th>Descriptions</th>
                        <th>Image</th>
                        <th>Status</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.parentid }}</td>
                            <td>{{ category.title }}</td>
                            <td>{{ category.keywords }}</td>
                            <td>{{ category.descriptions }}</td>
                            <td>{{ category.image }}</td>
                            <td>{{ category.status }}</td>

                            <td>
                                <a href="{{ path('category_show', {'id': category.id}) }}"class="btn btn-info btn-xs">show</a>
                                <a href="{{ path('category_edit', {'id': category.id}) }}"class="btn btn-info btn-xs">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('category_new') }}"class="btn btn-success btn-xs">Create new</a>
            </div>
        </div>
    </div>
    {% endblock %}
